<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Budget Summary Layout -->
    <LinearLayout
        android:id="@+id/budgetSummaryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvMonthlyBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Budget: $0 (Tap to update)"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvBudgetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Good"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- RecyclerView for Transactions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/budgetSummaryLayout"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Container for bottom buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:padding="16dp">

        <!-- Category Analysis Button -->
        <Button
            android:id="@+id/btnCategoryAnalysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Analysis"
            android:layout_marginEnd="8dp"/>

        <!-- Backup & Restore Button -->
        <Button
            android:id="@+id/btnBackupRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backup and Restore"/>
    </LinearLayout>

    <!-- Floating Action Button for adding transactions -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add"
        app:tint="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>