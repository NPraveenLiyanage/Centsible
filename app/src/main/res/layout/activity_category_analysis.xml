<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:chart="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TabLayout for switching between Expense and Income analytics -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@android:color/holo_blue_dark"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <!-- PieChart for a visual breakdown -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        chart:descriptionEnabled="false" />

    <!-- RecyclerView for a detailed list using your item_category_analysis layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoryAnalysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>