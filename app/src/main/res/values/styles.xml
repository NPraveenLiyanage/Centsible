<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set your desired status bar color -->
        <item name="android:statusBarColor">@color/my_status_bar_color</item>
        <!-- If your status bar background is light, you may want dark icons. Use windowLightStatusBar for that. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- Optional: Style for CardView shadow (if you want centralized settings) -->
    <style name="Widget.Custom.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Add this to your styles.xml file -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@drawable/rounded_bottom_sheet_background</item>
    </style>

    <style name="FeedbackDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
    </style>
</resources>
